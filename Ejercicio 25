#include <iostream>
#include <cmath> //para utilizar la función 'pow ()
using namespace std;

int main() {
    double radio;
    double area;
    const double PI = 3.14159;

    cout << "Ingrese el radio del círculo: ";
    cin >> radio;

    area = PI * pow(radio, 2);
    
    cout.precision(4);
    cout << "El área del círculo es: " << area << " unidades cuadradas" << endl;
    
    if (area > 5000) {
    
        cout << "DATOS ERRONEOS" << endl;
    }

    return 0;
}
